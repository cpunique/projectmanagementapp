rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // Helper Functions
    // ============================================

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Get the board document
    function getBoard(boardId) {
      return get(/databases/$(database)/documents/boards/$(boardId)).data;
    }

    // Check if user owns the board
    function isOwner(boardId) {
      return isAuthenticated() && getBoard(boardId).ownerId == request.auth.uid;
    }

    // Check if user has access to board (owner or shared)
    function canAccessBoard(boardId) {
      let board = getBoard(boardId);
      return isAuthenticated() && (
        request.auth.uid == board.ownerId ||
        request.auth.uid in board.sharedWith
      );
    }

    // ============================================
    // Users Collection Rules
    // ============================================

    match /users/{userId} {
      // Users can read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;

      // Users can create their own document
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Users can update their own document
      allow update: if isAuthenticated() && request.auth.uid == userId;

      // Prevent user deletion
      allow delete: if false;
    }

    // ============================================
    // Boards Collection Rules
    // ============================================

    match /boards/{boardId} {

      // Read: Can read if user is owner or has access
      allow read: if isAuthenticated() && canAccessBoard(boardId);

      // Create: Can create if authenticated and setting self as owner
      allow create: if isAuthenticated() &&
                      request.resource.data.ownerId == request.auth.uid &&
                      request.resource.data.sharedWith is list;

      // Update: Can update if owner or has access
      allow update: if isAuthenticated() && canAccessBoard(boardId);

      // Delete: Can delete only if owner
      allow delete: if isAuthenticated() && isOwner(boardId);

      // ============================================
      // Nested Collections (future use)
      // ============================================

      // Comments subcollection (for future feature)
      match /comments/{commentId} {
        allow read: if isAuthenticated() && canAccessBoard(boardId);
        allow create: if isAuthenticated() && canAccessBoard(boardId) &&
                       request.resource.data.userId == request.auth.uid;
        allow update: if isAuthenticated() &&
                      request.resource.data.userId == request.auth.uid;
        allow delete: if isAuthenticated() &&
                      resource.data.userId == request.auth.uid;
      }

      // Attachments subcollection (for future feature)
      match /attachments/{attachmentId} {
        allow read: if isAuthenticated() && canAccessBoard(boardId);
        allow create: if isAuthenticated() && canAccessBoard(boardId) &&
                      request.resource.data.uploadedBy == request.auth.uid;
        allow delete: if isAuthenticated() &&
                     resource.data.uploadedBy == request.auth.uid;
      }
    }

    // ============================================
    // Catch-All (Deny by default)
    // ============================================

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
